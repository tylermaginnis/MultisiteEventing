@model MultisiteEventing.Models.AssetModel

@{
    ViewData["Title"] = "Create Asset";
}

<h2>Create Asset</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="Category" class="form-control">
            <option value="Consumable">Consumable</option>
            <option value="Durable">Durable</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitOfMeasure" class="control-label"></label>
        <select asp-for="UnitOfMeasure" class="form-control">
            <option value="Pieces">Pieces</option>
            <option value="Packs">Packs</option>
            <option value="Boxes">Boxes</option>
            <option value="Sets">Sets</option>
        </select>
        <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
